<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:FileDiff">

	<Viewbox x:Key="CompareIcon">
		<Canvas Width="100" Height="100">
			<Rectangle Fill="LightPink" Canvas.Left="0" Canvas.Top="10" Width="40" Height="80" />
			<Rectangle Fill="LightGreen" Canvas.Left="50" Canvas.Top="0" Width="40" Height="80" />
			<Ellipse Stroke="#505050" StrokeThickness="10" Canvas.Left="15" Canvas.Top="15" Width="65" Height="65" />
			<Line Stroke="#505050" StrokeThickness="10" X1="70" Y1="70" X2="100" Y2="100" />
		</Canvas>
	</Viewbox>

	<Viewbox x:Key="PreviousDiffIcon">
		<Path Stretch="Uniform" StrokeThickness="0">
			<Path.Fill>
				<LinearGradientBrush EndPoint="0.6,1" StartPoint="0.4,0">
					<GradientStop Color="#FF0AC30A" Offset="0" />
					<GradientStop Color="#FF004900" Offset="1" />
				</LinearGradientBrush>
			</Path.Fill>
			<Path.Data>
				<PathGeometry>
					<PathGeometry.Figures>
						<PathFigure StartPoint="0,10" IsClosed="True">
							<PathFigure.Segments>
								<LineSegment Point="10,0" />
								<LineSegment Point="20,10" />
							</PathFigure.Segments>
						</PathFigure>
					</PathGeometry.Figures>
				</PathGeometry>
			</Path.Data>
		</Path>
	</Viewbox>

	<Viewbox x:Key="NextDiffIcon">
		<Path Stretch="Uniform" StrokeThickness="0">
			<Path.Fill>
				<LinearGradientBrush EndPoint="0.6,1" StartPoint="0.4,0">
					<GradientStop Color="#FF0AC30A" Offset="0" />
					<GradientStop Color="#FF004900" Offset="1" />
				</LinearGradientBrush>
			</Path.Fill>
			<Path.Data>
				<PathGeometry>
					<PathGeometry.Figures>
						<PathFigure StartPoint="0,10" IsClosed="True">
							<PathFigure.Segments>
								<LineSegment Point="10,20" />
								<LineSegment Point="20,10" />
							</PathFigure.Segments>
						</PathFigure>
					</PathGeometry.Figures>
				</PathGeometry>
			</Path.Data>
		</Path>
	</Viewbox>

</ResourceDictionary>