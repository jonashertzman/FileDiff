<Window
	x:Class="FileDiff.OptionsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:filediff="clr-namespace:FileDiff"
	xmlns:local="clr-namespace:FileDiff"
	Title="Options"
	Width="778"
	Height="498"
	d:Height="1200"
	d:DataContext="{d:DesignInstance Type=filediff:MainWindowViewModel}"
	Background="{StaticResource Theme.Dialog}"
	TextOptions.TextFormattingMode="Display"
	UseLayoutRounding="True"
	ResizeMode="CanResizeWithGrip"
	WindowStartupLocation="CenterOwner"
	ShowInTaskbar="False"
	mc:Ignorable="d">

	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Border Margin="5">
			<TabControl>

				<TabItem Header="General">
					<Border Padding="5">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="auto" />
								<RowDefinition Height="auto" />
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="auto" />
								<ColumnDefinition Width="auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>

							<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Content="Theme" />
							<ComboBox x:Name="ComboBoxTheme" Grid.Row="0" Grid.Column="1" MinWidth="100" HorizontalAlignment="Left" Text="{Binding Theme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CommonComboBox}" />
							<CheckBox Grid.Row="1" Grid.ColumnSpan="3" Content="Automatically Check for Updates" IsChecked="{Binding CheckForUpdates}" Style="{StaticResource CommonCheckBox}" />
							<CheckBox Grid.Row="2" Grid.ColumnSpan="3" Content="Detect Moved Lines" IsChecked="{Binding DetectMovedLines}" Style="{StaticResource CommonCheckBox}" />
						</Grid>
					</Border>
				</TabItem>

				<TabItem Header="Preview">
					<Border Padding="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="2*" />
								<ColumnDefinition Width="1*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>

							<Label Grid.Column="0" Content="Font" />
							<ComboBox x:Name="ComboBoxFont" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Font, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=Font}" IsEditable="True" Style="{StaticResource CommonComboBox}" />
							<TextBox x:Name="TextBoxFontSize" Grid.Column="3" Style="{StaticResource CommonTextBox}" Text="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=11}" />
							<Button x:Name="ButtonResetFont" Grid.Column="4" Content="Default" Style="{StaticResource CommonButton}" Click="ButtonResetFont_Click" />

							<Label Grid.Row="1" Content="Tab Size" />
							<TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource CommonTextBox}" Text="{Binding TabSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=2}" />
						</Grid>
					</Border>
				</TabItem>

				<TabItem Header="Colors">
					<Border Padding="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="auto" />
							</Grid.ColumnDefinitions>
							<ScrollViewer Margin="5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
								<StackPanel Margin="0,-5,0,0">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="80" />
											<ColumnDefinition Width="80" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
											<RowDefinition Height="Auto" MinHeight="20" />
										</Grid.RowDefinitions>


										<Border Grid.Row="0" Grid.ColumnSpan="3" Margin="0,5" BorderThickness="1">
											<Border.Background>
												<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
													<GradientStop Offset="0" Color="{Binding Path=(local:AppSettings.WindowBackgroundColor), FallbackValue=#FFFFFFFF}" />
													<GradientStop Offset="1" Color="{Binding Path=(local:AppSettings.DialogBackgroundColor), FallbackValue=#FFF0F0F0}" />
												</LinearGradientBrush>
											</Border.Background>
											<TextBlock Padding="7" Text="Folder Diff Colors" />
										</Border>
										<Label Grid.Row="0" Grid.Column="1" Content="Foreground" />
										<Label Grid.Row="0" Grid.Column="2" Content="Background" />

										<Label Grid.Row="1" Content="Normal" />
										<Rectangle Grid.Row="1" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderFullMatchForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="1" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderFullMatchBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="2" Content="New" />
										<Rectangle Grid.Row="2" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderNewForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="2" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderNewBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="3" Content="Deleted" />
										<Rectangle Grid.Row="3" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderDeletedForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="3" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderDeletedBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="4" Content="Changed" />
										<Rectangle Grid.Row="4" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderPartialMatchForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="4" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderPartialMatchBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="5" Content="Ignored" />
										<Rectangle Grid.Row="5" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderIgnoredForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="5" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FolderIgnoredBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />


										<Border Grid.Row="6" Grid.ColumnSpan="3" Margin="0,5" BorderThickness="1">
											<Border.Background>
												<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
													<GradientStop Offset="0" Color="{Binding Path=(local:AppSettings.WindowBackgroundColor), FallbackValue=#FFFFFFFF}" />
													<GradientStop Offset="1" Color="{Binding Path=(local:AppSettings.DialogBackgroundColor), FallbackValue=#FFF0F0F0}" />
												</LinearGradientBrush>
											</Border.Background>
											<TextBlock Padding="7" Text="File Diff Colors" />
										</Border>
										<Label Grid.Row="6" Grid.Column="1" Content="Foreground" />
										<Label Grid.Row="6" Grid.Column="2" Content="Background" />

										<Label Grid.Row="7" Content="Normal" />
										<Rectangle Grid.Row="7" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.FullMatchForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="7" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.FullMatchBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="8" Content="New" />
										<Rectangle Grid.Row="8" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.NewForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="8" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.NewBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="9" Content="Moved To" />
										<Rectangle Grid.Row="9" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.MovedToBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="10" Content="Deleted" />
										<Rectangle Grid.Row="10" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.DeletedForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="10" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.DeletedBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="11" Content="Moved From" />
										<Rectangle Grid.Row="11" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.MovedFromBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="12" Content="Changed" />
										<Rectangle Grid.Row="12" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.PartialMatchForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="12" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.PartialMatchBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="13" Content="Ignored" />
										<Rectangle Grid.Row="13" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.IgnoredForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="13" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.IgnoredBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="14" Content="White Space Characters" />
										<Rectangle x:Name="WhiteSpaceForeground" Grid.Row="14" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.WhiteSpaceForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="15" Grid.Column="0" Content="Selection" />
										<Rectangle x:Name="SelectionBackground" Grid.Row="15" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.SelectionBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="16" Grid.Column="0" Content="Line Numbers" />
										<Rectangle Grid.Row="16" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.LineNumberColor), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="17" Grid.Column="0" Content="Current Diff" />
										<Rectangle Grid.Row="17" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.CurrentDiffColor), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="18" Grid.Column="0" Content="Move Arrows" />
										<Rectangle Grid.Row="18" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.SnakeColor), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />


										<Border Grid.Row="19" Grid.ColumnSpan="3" Margin="0,5" BorderThickness="1">
											<Border.Background>
												<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
													<GradientStop Offset="0" Color="{Binding Path=(local:AppSettings.WindowBackgroundColor), FallbackValue=#FFFFFFFF}" />
													<GradientStop Offset="1" Color="{Binding Path=(local:AppSettings.DialogBackgroundColor), FallbackValue=#FFF0F0F0}" />
												</LinearGradientBrush>
											</Border.Background>
											<TextBlock Padding="7" Text="UI Colors" />
										</Border>
										<Label Grid.Row="19" Grid.Column="1" Content="Foreground" />
										<Label Grid.Row="19" Grid.Column="2" Content="Background" />

										<Label Grid.Row="20" Content="Text" />
										<Rectangle Grid.Row="20" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.WindowForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="21" Content="Disabled Text" />
										<Rectangle Grid.Row="21" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.DisabledForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />
										<Rectangle Grid.Row="21" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.DisabledBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="22" Content="Window" />
										<Rectangle Grid.Row="22" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.WindowBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="23" Content="Dialog" />
										<Rectangle Grid.Row="23" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.DialogBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="24" Content="Control Light" />
										<Rectangle Grid.Row="24" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.ControlLightBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="25" Content="Control Dark" />
										<Rectangle Grid.Row="25" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.ControlDarkBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="26" Content="Border Light" />
										<Rectangle Grid.Row="26" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.BorderForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="27" Content="Border Dark" />
										<Rectangle Grid.Row="27" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.BorderDarkForeground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="28" Content="Highlight Background" />
										<Rectangle Grid.Row="28" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.HighlightBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="29" Content="Highlight Border" />
										<Rectangle Grid.Row="29" Grid.Column="1" Margin="5" Fill="{Binding Path=(local:AppSettings.HighlightBorder), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />

										<Label Grid.Row="30" Content="Attention Background" />
										<Rectangle Grid.Row="30" Grid.Column="2" Margin="5" Fill="{Binding Path=(local:AppSettings.AttentionBackground), Mode=TwoWay}" MouseLeftButtonUp="Rectangle_MouseUp" />


									</Grid>
								</StackPanel>
							</ScrollViewer>
							<StackPanel Grid.Column="1">
								<Button x:Name="ButtonResetColors" Grid.Row="0" Grid.Column="8" Content="Reset All" Style="{StaticResource CommonButton}" Click="ButtonResetColors_Click" />
							</StackPanel>
							<Popup Name="ColorChooser" Placement="MousePoint" StaysOpen="False" AllowsTransparency="True">
								<Grid RenderOptions.ClearTypeHint="Enabled">
									<!--  Workaround to not fuckup the cleartype rendering  -->
									<Border Margin="10" Padding="5" BorderThickness="1" Background="{StaticResource Theme.Dialog}">
										<Border.Effect>
											<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity=".3" />
										</Border.Effect>
									</Border>
									<Border Margin="10" Padding="5" PreviewKeyDown="Border_PreviewKeyDown" BorderThickness="1" Background="{StaticResource Theme.Dialog}">
										<Grid Width="150">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="auto" />
												<ColumnDefinition />
											</Grid.ColumnDefinitions>
											<Grid.RowDefinitions>
												<RowDefinition />
												<RowDefinition />
												<RowDefinition />
												<RowDefinition />
												<RowDefinition />
											</Grid.RowDefinitions>

											<local:ErrorTextBox x:Name="ColorHex" Grid.ColumnSpan="2" Margin="5" Text="#FFAA2288" TextChanged="ColorHex_TextChanged" />

											<Label Grid.Row="1" Content="R" />
											<Slider Name="SliderR" Grid.Row="1" Grid.Column="1" Margin="5" Maximum="255" SmallChange="1" LargeChange="10" ValueChanged="Slider_ValueChanged" BorderBrush="Transparent" BorderThickness="1" />

											<Label Grid.Row="2" Content="G" />
											<Slider Name="SliderG" Grid.Row="2" Grid.Column="1" Margin="5" Maximum="255" SmallChange="1" LargeChange="10" ValueChanged="Slider_ValueChanged" BorderBrush="Transparent" BorderThickness="1" />

											<Label Grid.Row="3" Content="B" />
											<Slider Name="SliderB" Grid.Row="3" Grid.Column="1" Margin="5" Maximum="255" SmallChange="1" LargeChange="10" ValueChanged="Slider_ValueChanged" BorderBrush="Transparent" BorderThickness="1" />

											<Label Name="LabelA" Grid.Row="4" Content="A" />
											<Slider Name="SliderA" Grid.Row="4" Grid.Column="1" Margin="5" Maximum="255" SmallChange="1" LargeChange="10" ValueChanged="Slider_ValueChanged" BorderBrush="Transparent" BorderThickness="1" />

										</Grid>
									</Border>
								</Grid>
							</Popup>
						</Grid>
					</Border>
				</TabItem>

				<TabItem Header="Ignores">
					<Border Padding="5">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>

							<DataGrid Grid.Row="0" Margin="5" d:ItemsSource="{d:SampleData}" ItemsSource="{Binding IgnoredFolders}" Style="{StaticResource SearchAttributeGrid}" CanUserReorderColumns="False" CanUserSortColumns="False" AutoGenerateColumns="False" SelectionMode="Single" RowHeaderWidth="0" GridLinesVisibility="Horizontal">
								<DataGrid.Columns>
									<DataGridTextColumn Width="*" Binding="{Binding Text}" CellStyle="{StaticResource DataGridCellAttributes}" EditingElementStyle="{StaticResource DataCellTextbox}" Header="Ignore Directories" CanUserResize="False" />
								</DataGrid.Columns>
							</DataGrid>

							<DataGrid Grid.Row="0" Grid.Column="1" Margin="5" d:ItemsSource="{d:SampleData}" ItemsSource="{Binding IgnoredFiles}" Style="{StaticResource SearchAttributeGrid}" CanUserReorderColumns="False" CanUserSortColumns="False" AutoGenerateColumns="False" SelectionMode="Single" RowHeaderWidth="0" GridLinesVisibility="Horizontal">
								<DataGrid.Columns>
									<DataGridTextColumn Width="*" Binding="{Binding Text}" CellStyle="{StaticResource DataGridCellAttributes}" EditingElementStyle="{StaticResource DataCellTextbox}" Header="Ignore Files" CanUserResize="False" />
								</DataGrid.Columns>
							</DataGrid>

							<TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="5,0,5,0" Text="These are case insensitive and can contain wildcards." Foreground="{StaticResource {x:Static SystemColors.ControlDarkBrushKey}}" />

						</Grid>
					</Border>
				</TabItem>

			</TabControl>
		</Border>

		<StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
			<Button Grid.ColumnSpan="2" Content="OK" Style="{StaticResource CommonButton}" IsDefault="True" Click="ButtonOk_Click" />
			<Button Grid.ColumnSpan="2" Content="Cancel" Style="{StaticResource CommonButton}" IsCancel="True" />
		</StackPanel>

	</Grid>
</Window>
